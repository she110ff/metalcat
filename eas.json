{
  "build": {
    "base": {
      "node": "20.18.3",

      "android": {
        "image": "latest",
        "env": {
          "PLATFORM": "android"
        }
      },
      "ios": {
        "image": "latest",
        "env": {
          "PLATFORM": "ios"
        }
      },
      "channel": "base"
    },
    "development": {
      "extends": "base",
      "channel": "development",
      "developmentClient": true,
      "env": {
        "EXPO_PUBLIC_ENV": "development"
      },
      "android": {
        "distribution": "internal",
        "withoutCredentials": true
      },
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "extends": "base",
      "channel": "preview",
      "environment": "preview",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production",
      "env": {
        "EXPO_PUBLIC_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "youngsoo.jung@bosagora.io",
        "ascAppId": "6743196870",
        "appleTeamId": "ARJ557D83Z"
      }
    }
  },
  "cli": {
    "promptToConfigurePushNotifications": false,
    "appVersionSource": "remote"
  }
}
